<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_item_cloud_purchase_title"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:text="即将揭晓" />

            <TextView
                android:id="@+id/tv_item_cloud_purchase_more"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:text="更多" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/layout_item_cloud_purchase_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_item_cloud_purchase_1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    fresco:failureImage="@mipmap/ic_stub"
                    fresco:failureImageScaleType="fitXY"
                    fresco:placeholderImage="@mipmap/ic_stub"
                    fresco:placeholderImageScaleType="fitCenter"
                    fresco:retryImage="@mipmap/ic_stub"
                    fresco:retryImageScaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_item_cloud_purchase_name_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_item_cloud_purchase_1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="恭喜2016获得" />

                <ImageView
                    android:id="@+id/iv_item_cloud_purchase_type_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/cloud_purchase_coupons" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_item_cloud_purchase_1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:background="@color/divider_line" />

            <RelativeLayout
                android:id="@+id/layout_item_cloud_purchase_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_item_cloud_purchase_2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    fresco:failureImage="@mipmap/ic_stub"
                    fresco:failureImageScaleType="fitXY"
                    fresco:placeholderImage="@mipmap/ic_stub"
                    fresco:placeholderImageScaleType="fitCenter"
                    fresco:retryImage="@mipmap/ic_stub"
                    fresco:retryImageScaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_item_cloud_purchase_name_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_item_cloud_purchase_2"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="恭喜2016获得" />

                <ImageView
                    android:id="@+id/iv_item_cloud_purchase_type_2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/cloud_purchase_coupons" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_item_cloud_purchase_2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:background="@color/divider_line" />

            <RelativeLayout
                android:id="@+id/layout_item_cloud_purchase_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_item_cloud_purchase_3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    fresco:failureImage="@mipmap/ic_stub"
                    fresco:failureImageScaleType="fitXY"
                    fresco:placeholderImage="@mipmap/ic_stub"
                    fresco:placeholderImageScaleType="fitCenter"
                    fresco:retryImage="@mipmap/ic_stub"
                    fresco:retryImageScaleType="fitXY" />

                <TextView
                    android:id="@+id/tv_item_cloud_purchase_name_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_item_cloud_purchase_3"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="恭喜2016获得" />

                <ImageView
                    android:id="@+id/iv_item_cloud_purchase_type_3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/cloud_purchase_coupons" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line"></View>
</LinearLayout>

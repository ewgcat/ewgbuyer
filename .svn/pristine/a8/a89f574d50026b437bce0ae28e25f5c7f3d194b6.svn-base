<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_details_invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginLeft="4dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="公   司   名   称:"
                android:textSize="@dimen/textmin" />

            <TextView
                android:id="@+id/tv_details_invoice_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="123123"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/textmin" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginLeft="4dp"
                android:text="注   册   地   址:"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/textmin" />

            <TextView
                android:id="@+id/tv_details_invoice_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="123123"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/textmin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginLeft="4dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="注   册   电   话:"
                android:textSize="@dimen/textmin" />

            <TextView
                android:id="@+id/tv_details_invoice_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="123123"

                android:textSize="@dimen/textmin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="4dp"
                android:text="银   行   账   户:"
                android:textSize="@dimen/textmin" />

            <TextView
                android:id="@+id/tv_details_invoice_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="133333333333"
                android:textSize="@dimen/textmin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="4dp"
                android:text="开   户   银   行:"
                android:textSize="@dimen/textmin" />

            <TextView
                android:id="@+id/tv_details_invoice_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="sdfsdfsdf"
                android:textSize="@dimen/textmin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="4dp"
                android:text="纳 税 人 识 别 :"
                android:textSize="@dimen/textmin" />

            <TextView
                android:id="@+id/tv_details_invoice_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="12312323125555"
                android:textSize="@dimen/textmin" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

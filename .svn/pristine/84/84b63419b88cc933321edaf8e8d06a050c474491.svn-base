            fresco:retryImageScaleType="centerInside" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:divider="@drawable/divider_vertical"
            android:orientation="vertical"
            android:showDividers="middle">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="129"
                android:clickable="true"
                fresco:actualImageScaleType="fitXY"
                fresco:backgroundImage="@color/white"
                fresco:failureImage="@mipmap/ic_stub"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@mipmap/ic_stub"
                fresco:placeholderImageScaleType="centerInside"
                fresco:retryImage="@mipmap/ic_stub"
                fresco:retryImageScaleType="centerInside" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="210"
                android:divider="@drawable/divider_horizontal"
                android:orientation="horizontal"
                android:showDividers="middle">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    fresco:actualImageScaleType="fitXY"
                    fresco:backgroundImage="@color/white"
                    fresco:failureImage="@mipmap/ic_stub"
                    fresco:failureImageScaleType="centerInside"
                    fresco:placeholderImage="@mipmap/ic_stub"
                    fresco:placeholderImageScaleType="centerInside"
                    fresco:retryImage="@mipmap/ic_stub"
                    fresco:retryImageScaleType="centerInside" />


                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    fresco:actualImageScaleType="fitXY"
                    fresco:backgroundImage="@color/white"
                    fresco:failureImage="@mipmap/ic_stub"
                    fresco:failureImageScaleType="centerInside"
                    fresco:placeholderImage="@mipmap/ic_stub"
                    fresco:placeholderImageScaleType="centerInside"
                    fresco:retryImage="@mipmap/ic_stub"
                    fresco:retryImageScaleType="centerInside" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/index_title_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@color/light_gray"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@color/white">

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@color/red"></View>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:textColor="@color/textdark"
                android:textSize="@dimen/textsmall" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
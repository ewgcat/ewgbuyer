<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@color/white">

    <CheckBox
        android:id="@+id/check_combine_item"
        style="@style/RoundCheckboxTheme"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"
        android:clickable="false" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_combine_items_details_pre"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            fresco:failureImage="@mipmap/ic_stub"
            fresco:failureImageScaleType="fitXY"
            fresco:placeholderImage="@mipmap/ic_stub"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:retryImage="@mipmap/ic_stub"
            fresco:retryImageScaleType="fitXY"
            />
        <TextView
            android:id="@+id/tv_combine_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="详情"
            android:lines="4"
            android:ellipsize="end"
            android:textSize="@dimen/textsmall"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            />

</LinearLayout>

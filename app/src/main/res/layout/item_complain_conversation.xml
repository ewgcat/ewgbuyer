<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="16dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="地址名称"
        android:textColor="@color/complain_conversation_username"
        android:textSize="@dimen/textmin" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_username"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:text="@string/address_detail"
        android:textColor="@color/complain_conversation_time"
        android:textSize="@dimen/text_thirteen" />

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_username"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="地址名称"
        android:textColor="@color/complain_conversation_datail"
        android:textSize="@dimen/text_thirteen" />

</RelativeLayout>
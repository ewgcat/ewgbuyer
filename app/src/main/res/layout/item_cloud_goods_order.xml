<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="80dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_goods_cloud"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_margin="10dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        fresco:failureImage="@mipmap/ic_stub"
        fresco:failureImageScaleType="fitXY"
        fresco:placeholderImage="@mipmap/ic_stub"
        fresco:placeholderImageScaleType="fitXY"
        fresco:retryImage="@mipmap/ic_stub"
        fresco:retryImageScaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_order_goodsname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:text="555555555"
            android:textSize="@dimen/textmin"
            android:maxLines="2"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/tv_order_goodsname"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参与人次："
                android:layout_marginRight="4dp"
                android:textSize="@dimen/textmin"/>
            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/toolbar_color"
                android:textSize="@dimen/textmin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人次"
                android:layout_marginLeft="4dp"
                android:textSize="@dimen/textmin"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

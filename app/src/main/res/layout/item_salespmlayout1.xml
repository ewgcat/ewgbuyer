<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_selespm_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_salespm"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/white"
            fresco:failureImage="@mipmap/ic_stub"
            fresco:failureImageScaleType="center"
            fresco:placeholderImage="@mipmap/ic_stub"
            fresco:placeholderImageScaleType="center"
            fresco:retryImage="@mipmap/ic_stub"
            fresco:retryImageScaleType="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="活动时间："
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/textsmall" />

            <TextView
                android:id="@+id/tv_salesstarttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-11-11"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/textsmall" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="至"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/textsmall" />

            <TextView
                android:id="@+id/tv_salesstoptime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-11-12"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/textsmall" />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>

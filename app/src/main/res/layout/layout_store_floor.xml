<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <LinearLayout
            android:id="@+id/goods1"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_weight="1"
            android:focusable="false"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/goods_img1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                fresco:actualImageScaleType="fitXY"
                fresco:failureImage="@mipmap/ic_stub"
                fresco:failureImageScaleType="fitXY"
                fresco:placeholderImage="@mipmap/ic_stub"
                fresco:placeholderImageScaleType="fitXY"
                fresco:retryImage="@mipmap/ic_stub"
                fresco:retryImageScaleType="fitXY" />

            <TextView
                android:id="@+id/goods_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_value"
                android:layout_below="@+id/iv_today"
                android:ellipsize="end"
                android:lines="2" />

            <TextView
                android:id="@+id/goods_price1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/goods2"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_weight="1"
            android:focusable="false"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/goods_img2"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                fresco:actualImageScaleType="fitXY"
                fresco:failureImage="@mipmap/ic_stub"
                fresco:failureImageScaleType="fitXY"
                fresco:placeholderImage="@mipmap/ic_stub"
                fresco:placeholderImageScaleType="fitXY"
                fresco:retryImage="@mipmap/ic_stub"
                fresco:retryImageScaleType="fitXY" />

            <TextView
                android:id="@+id/goods_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_value"
                android:layout_below="@+id/iv_today"
                android:ellipsize="end"
                android:lines="2" />

            <TextView
                android:id="@+id/goods_price2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

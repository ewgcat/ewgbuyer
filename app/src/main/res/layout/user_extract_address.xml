<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/bgcolor">

    <ImageView
        android:id="@+id/iv_tickpng"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:src="@mipmap/tickpng"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/iv_tickpng"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_margin" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_name"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="phone"
        android:textColor="@color/user_order_address"
        android:textSize="@dimen/text_thirteen" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_phone"
        android:layout_alignLeft="@id/tv_name"
        android:layout_centerVertical="true"
        android:layout_marginBottom="4dp"
        android:text="address"
        android:textColor="@color/user_order_address"
        android:textSize="@dimen/text_thirteen" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray" />

</RelativeLayout>
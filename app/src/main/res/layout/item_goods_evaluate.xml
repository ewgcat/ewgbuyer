<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/evaluate_bg_white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/light_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/evaluate_solid_line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_item_evaluate_user_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                fresco:failureImage="@mipmap/ic_stub"
                fresco:failureImageScaleType="center"
                fresco:placeholderImage="@mipmap/ic_stub"
                fresco:placeholderImageScaleType="center"
                fresco:retryImage="@mipmap/ic_stub"
                fresco:retryImageScaleType="center"
                fresco:roundAsCircle="true" />

            <TextView
                android:id="@+id/tv_item_evaluate_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/iv_item_evaluate_user_img"
                android:textColor="@color/evaluate_tv_white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_item_evaluate_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/evaluate_tv_date_gray"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/evaluate_line_gray" />


        <TextView
            android:id="@+id/tv_item_evaluate_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/evaluate_tv_white"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/evaluate_line_gray" />


        <LinearLayout
            android:id="@+id/layout_item_evaluate_photos"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                style="@style/evaluate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="晒单："
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_item_evaluate_img1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    fresco:failureImage="@mipmap/ic_stub"
                    fresco:failureImageScaleType="center"
                    fresco:placeholderImage="@mipmap/ic_stub"
                    fresco:placeholderImageScaleType="center"
                    fresco:retryImage="@mipmap/ic_stub"
                    fresco:retryImageScaleType="centerInside"
                    fresco:roundAsCircle="false" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_item_evaluate_img2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    fresco:failureImage="@mipmap/ic_stub"
                    fresco:failureImageScaleType="center"
                    fresco:placeholderImage="@mipmap/ic_stub"
                    fresco:placeholderImageScaleType="center"
                    fresco:retryImage="@mipmap/ic_stub"
                    fresco:retryImageScaleType="centerInside"
                    fresco:roundAsCircle="false" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_item_evaluate_img3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    fresco:failureImage="@mipmap/ic_stub"
                    fresco:failureImageScaleType="center"
                    fresco:placeholderImage="@mipmap/ic_stub"
                    fresco:placeholderImageScaleType="center"
                    fresco:retryImage="@mipmap/ic_stub"
                    fresco:retryImageScaleType="centerInside"
                    fresco:roundAsCircle="false" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_item_evaluate_img4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    fresco:failureImage="@mipmap/ic_stub"
                    fresco:failureImageScaleType="center"
                    fresco:placeholderImage="@mipmap/ic_stub"
                    fresco:placeholderImageScaleType="center"
                    fresco:retryImage="@mipmap/ic_stub"
                    fresco:retryImageScaleType="centerInside"
                    fresco:roundAsCircle="false" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_item_evaluate_add_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_weight="0"
                android:background="@color/evaluate_line_gray" />

            <TextView
                android:id="@+id/tv_item_evaluate_add_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="2dp"
                android:textColor="@color/evaluate_tv_white"
                android:textSize="13sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_item_add_evaluate_photos"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/evaluate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="追加晒单："
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_item_add_evaluate_img1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    fresco:failureImage="@mipmap/ic_stub"
                    fresco:failureImageScaleType="center"
                    fresco:placeholderImage="@mipmap/ic_stub"
                    fresco:placeholderImageScaleType="center"
                    fresco:retryImage="@mipmap/ic_stub"
                    fresco:retryImageScaleType="centerInside"
                    fresco:roundAsCircle="false" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_item_add_evaluate_img2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    fresco:failureImage="@mipmap/ic_stub"
                    fresco:failureImageScaleType="center"
                    fresco:placeholderImage="@mipmap/ic_stub"
                    fresco:placeholderImageScaleType="center"
                    fresco:retryImage="@mipmap/ic_stub"
                    fresco:retryImageScaleType="centerInside"
                    fresco:roundAsCircle="false" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_item_add_evaluate_img3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    fresco:failureImage="@mipmap/ic_stub"
                    fresco:failureImageScaleType="center"
                    fresco:placeholderImage="@mipmap/ic_stub"
                    fresco:placeholderImageScaleType="center"
                    fresco:retryImage="@mipmap/ic_stub"
                    fresco:retryImageScaleType="centerInside"
                    fresco:roundAsCircle="false" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_item_add_evaluate_img4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    fresco:failureImage="@mipmap/ic_stub"
                    fresco:failureImageScaleType="center"
                    fresco:placeholderImage="@mipmap/ic_stub"
                    fresco:placeholderImageScaleType="center"
                    fresco:retryImage="@mipmap/ic_stub"
                    fresco:retryImageScaleType="centerInside"
                    fresco:roundAsCircle="false" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/evaluate_solid_line_gray" />
</LinearLayout>
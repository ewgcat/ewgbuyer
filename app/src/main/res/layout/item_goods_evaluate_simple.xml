<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingRight="16dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_item_evaluate_user_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            fresco:failureImage="@mipmap/ic_stub"
            fresco:failureImageScaleType="center"
            fresco:placeholderImage="@mipmap/ic_stub"
            fresco:placeholderImageScaleType="center"
            fresco:retryImage="@mipmap/ic_stub"
            fresco:retryImageScaleType="center"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/tv_item_evaluate_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/iv_item_evaluate_user_img"
            android:textColor="@color/evaluate_tv_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_item_evaluate_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/evaluate_tv_date_gray"
            android:textSize="12sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_item_evaluate_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:lineSpacingExtra="2dp"
        android:maxLines="3"
        android:textColor="@color/evaluate_tv_white"
        android:textSize="13sp" />


</LinearLayout>
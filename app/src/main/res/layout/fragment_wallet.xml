<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:divider="@drawable/divider_vertical"
        android:orientation="vertical"
        android:showDividers="middle">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"></View>

        <RelativeLayout
            android:id="@+id/balance"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="@string/usercenter_balance"
                android:textColor="@color/textdark"
                android:textSize="@dimen/textsmall" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:drawableRight="@mipmap/arrow"
                android:gravity="center"
                android:textColor="@color/textlight"
                android:textSize="@dimen/textsmall" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/integral"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="@string/integral"
                android:textColor="@color/textdark"
                android:textSize="@dimen/textsmall" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:drawableRight="@mipmap/arrow"
                android:gravity="center"
                android:textColor="@color/textlight"
                android:textSize="@dimen/textsmall" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/coupons"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="@string/coupons"
                android:textColor="@color/textdark"
                android:textSize="@dimen/textsmall" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:drawableRight="@mipmap/arrow"
                android:gravity="center"
                android:textColor="@color/textlight"
                android:textSize="@dimen/textsmall" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/free"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="@string/my_free"
                android:textColor="@color/textdark"
                android:textSize="@dimen/textsmall" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:drawableRight="@mipmap/arrow"
                android:gravity="center"
                android:textColor="@color/textlight"
                android:textSize="@dimen/textsmall" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/group_life"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="@string/group_life"
                android:textColor="@color/textdark"
                android:textSize="@dimen/textsmall" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:drawableRight="@mipmap/arrow"
                android:gravity="center"
                android:textColor="@color/textlight"
                android:textSize="@dimen/textsmall" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"></View>
    </LinearLayout>
</LinearLayout>
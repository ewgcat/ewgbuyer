<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_item_cloud_detail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@color/white"
            fresco:failureImage="@mipmap/ic_stub"
            fresco:failureImageScaleType="fitXY"
            fresco:placeholderImage="@mipmap/ic_stub"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:retryImage="@mipmap/ic_stub"
            fresco:roundAsCircle="true"
            fresco:retryImageScaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_cloud_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="财神到好运来 (湖南省 IP：175.3.102.71)" />

            <TextView
                android:id="@+id/tv_item_cloud_detail_info"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="参与了1人次 2016-02-23 10:54:07.662" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

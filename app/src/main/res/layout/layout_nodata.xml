<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_nodata"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:clickable="false">

    <ImageView
        android:id="@+id/nodata_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:src="@mipmap/nodata" />

    <TextView
        android:id="@+id/nodata_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:text="@string/nodata_reason"
        android:textColor="@color/textlight"
        android:textSize="@dimen/textlarge" />

    <TextView
        android:id="@+id/nodata_refresh"
        style="@style/button_white_frame"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:drawableLeft="@mipmap/nodata_refresh"
        android:paddingLeft="20dp"
        android:text="@string/nodata_refresh" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_item_cloud_purchase_title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="今日热门商品" />

        <TextView
            android:id="@+id/tv_item_cloud_purchase_more"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingRight="20dp"
            android:text="更多" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="3dp"
        android:paddingRight="3dp">

        <RelativeLayout
            android:id="@+id/layout_item_cloud_purchase_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_cloud_purchase_item">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_item_cloud_purchase_1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                fresco:failureImage="@mipmap/ic_stub"
                fresco:failureImageScaleType="fitXY"
                fresco:placeholderImage="@mipmap/ic_stub"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:retryImage="@mipmap/ic_stub"
                fresco:retryImageScaleType="fitXY" />

            <TextView
                android:id="@+id/tv_item_cloud_purchase_name_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_item_cloud_purchase_1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:singleLine="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_item_cloud_purchase_name_1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_item_cloud_purchase_add_1"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:id="@+id/tv_item_cloud_purchase_progress_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="12sp" />

                    <ProgressBar
                        android:id="@+id/pbar_item_cloud_purchase_1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="2dp"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/progress_color" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_item_cloud_purchase_add_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:background="@mipmap/cloud_purchase_add" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_item_cloud_purchase_type_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/cloud_purchase_coupons" />

        </RelativeLayout>

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray"></View>

        <RelativeLayout
            android:id="@+id/layout_item_cloud_purchase_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_cloud_purchase_item">


            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_item_cloud_purchase_2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                fresco:failureImage="@mipmap/ic_stub"
                fresco:failureImageScaleType="fitXY"
                fresco:placeholderImage="@mipmap/ic_stub"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:retryImage="@mipmap/ic_stub"
                fresco:retryImageScaleType="fitXY" />

            <TextView
                android:id="@+id/tv_item_cloud_purchase_name_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_item_cloud_purchase_2"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:singleLine="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_item_cloud_purchase_name_2">

                <LinearLayout
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_item_cloud_purchase_add_2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_item_cloud_purchase_progress_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="12sp" />

                    <ProgressBar
                        android:id="@+id/pbar_item_cloud_purchase_2"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="2dp"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/progress_color" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_item_cloud_purchase_add_2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:background="@mipmap/cloud_purchase_add" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_item_cloud_purchase_type_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/cloud_purchase_coupons" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
